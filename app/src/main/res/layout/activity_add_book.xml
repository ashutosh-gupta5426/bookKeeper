<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".AddBookActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingBottom="20dp"
        tools:ignore="UseCompoundDrawables">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/addBookBackBtn"
            android:layout_gravity="center_vertical"
            android:src="@drawable/back_arrow"
            tools:ignore="ContentDescription" />
        <TextView
            android:id="@+id/addBookTitle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Add a Book"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#2A55BB"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="20dp">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/pickImage"
            android:src="@drawable/placeholder"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Book Name"
        android:textSize="12sp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintEnabled="true"
        app:boxStrokeWidth="1dp"
        app:boxStrokeColor="@color/black"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="12dp"
        app:boxBackgroundMode="outline">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editBookName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/black"

            android:background="#F0F0F0"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Author Name Input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Author"
        android:textSize="12sp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintEnabled="true"
        app:boxStrokeWidth="1dp"
        app:boxStrokeColor="@color/black"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="12dp"
        app:boxBackgroundMode="outline">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editAuthorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/black"
            android:background="#F0F0F0" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Publication By Input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Published By"
        android:textSize="12sp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintEnabled="true"
        app:boxStrokeWidth="1dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="12dp"
        app:boxStrokeColor="@color/black"
        app:boxBackgroundMode="outline">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/publicationByEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/black"
            android:background="#F0F0F0" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Publication Year Input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Publication Year"
        android:textSize="12sp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintEnabled="true"
        app:boxStrokeWidth="1dp"
        app:boxStrokeColor="@color/black"
        app:boxBackgroundMode="outline"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="12dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/publicationYearEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/black"
            android:background="#F0F0F0" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Genre Input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Genre"
        android:textSize="12sp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintEnabled="true"
        app:boxStrokeWidth="1dp"
        app:boxStrokeColor="@color/black"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="12dp"
        app:boxBackgroundMode="outline">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/genreEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/black"
            android:background="#F0F0F0" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Description Input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Summary"
        android:textSize="12sp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:hintEnabled="true"
        android:layout_weight="1"
        app:boxStrokeWidth="1dp"
        app:boxStrokeColor="@color/black"
        app:boxBackgroundMode="outline"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="12dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/descriptionEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:gravity="start"
            android:textColor="@color/black"
            android:inputType="textMultiLine"
            android:background="#F0F0F0"/>
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/AddButton"
        android:layout_margin="5dp"
        app:cardCornerRadius="12dp"
        android:backgroundTint="#2A55BB">
        <TextView
            android:id="@+id/addButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Book"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />
    </androidx.cardview.widget.CardView>

</LinearLayout>